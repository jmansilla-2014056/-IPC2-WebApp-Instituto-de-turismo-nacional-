                    <li class="@Url.IsLinkActive("CREATE", "FOTO_SITIO")">
                        <a href="@Url.Action("INDEX", "FOTO_SITIO")"><i class="fa fa-camera"></i> <span>Manejar Fotos</span></a>
                    </li>
                    <li class="@Url.IsLinkActive("CREATE", "FOTO_SITIO")">
                        <a href="@Url.Action("CREATE", "FOTO_SITIO")"><i class="fa fa-camera"></i> <span>Agregar Fotos</span></a>
                    </li>
                </ul>
            </li>
        </ul>
