@model IEnumerable<WebInstitoTurismo.Models.FOTO_SITIO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = @ViewData["idSitio"] })
</p>
<div class="box">
    <div class="box-header with-border">
        <div class="box-body table-responsive no-padding">
            <table class="table table-striped">
                @using (Html.BeginForm("Index", "FOTO_SITIO", FormMethod.Get))
                {
                    <tr>
                        <th>
                            @Html.DropDownList("id", new SelectList(ViewBag.ID_SITIO, "Value", "Text", "ViewBagSelectedID_SITIO"),
"id", new { onchange = "form.submit();" })
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DIRECCION)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TITULO)
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                }


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SITIO_TURISTICO.NOMBRE)
                        </td>
                        <td>
                            <img class="profile-user-img img-responsive img-circle" src="@Url.Action("GetImage", "FOTO_SITIO", new { id = item.ID })" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TITULO)
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "fa fa-edit" })
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "fa fa-eye" })
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "fa fa-trash-o" })
                        </td>
                    </tr>
                }
            </table></div></div></div>
        </div>
    </div>
</div>