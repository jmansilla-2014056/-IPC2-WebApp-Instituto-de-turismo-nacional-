@model IEnumerable<WebInstitoTurismo.Models.CATALOGO_HOTEL>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="box">
    <div class="box-header with-border">
        <div class="box-body table-responsive no-padding">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.VALIDACION)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EMPRESA.NOMBRE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SERVICIO.DESCRIPCION)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VALIDACION)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMPRESA.NOMBRE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SERVICIO.DESCRIPCION)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table></div></div></div>
   
