@model WebInstitoTurismo.Models.CATALOGO_HOTEL

@{
    ViewBag.Title = "Create";
    List<WebInstitoTurismo.Models.SERVICIO> servicios = ViewBag.Servicios;
}

<h2>Create</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="form-horizontal">
                <div class="form-horizontal">
                    <h4>CATALOGO_HOTEL</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.EMPRESA.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMPRESA.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EMPRESA.NOMBRE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EMPRESA.DIRECCION, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMPRESA.DIRECCION, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EMPRESA.DIRECCION, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EMPRESA.TELEFONO, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input id="EMPRESA_TELEFONO" name="EMPRESA.TELEFONO" type="text" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 9999-9999&quot;" data-mask="">
                            @Html.ValidationMessageFor(model => model.EMPRESA.TELEFONO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EMPRESA.CORREO, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EMPRESA.CORREO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EMPRESA.CORREO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EMPRESA.ID_REGION, "EMPRESA.ID_REGION", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("EMPRESA_ID_REGION", null, htmlAttributes: new { @class = "form-control", @id = "EMPRESA_ID_REGION" })
                            @Html.ValidationMessageFor(model => model.EMPRESA.ID_REGION, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ID_SERVICIO, "ID_SERVICIO", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">

                            @Html.ValidationMessageFor(model => model.ID_SERVICIO, "", new { @class = "text-danger" })

                            @foreach (var c in servicios)
                            {
                                <li>
                                    <label><input type="checkbox" name="services" value="@c.ID">@c.DESCRIPCION</label>
                                </li>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
